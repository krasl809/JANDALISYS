# Production Environment Variables Template
# Copy this file to .env and fill in the values
# NEVER commit .env file to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_USER=jandalisys_user
DB_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
DB_NAME=jandalisys_prod
DB_HOST=postgres
DB_PORT=5432

# Full database URL (alternative to individual settings)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_32_CHAR_STRING

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
ENABLE_RATE_LIMIT=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=JANDALISYS
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# ADMIN CREDENTIALS
# =============================================================================
# These are used ONLY for initial setup
# Change them immediately after first login
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY
DEFAULT_ARCHIVE_PASSWORD=CHANGE_THIS_TOO

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/jandalisys/app.log

# =============================================================================
# MONITORING & ERRORS
# =============================================================================
# Sentry DSN for error tracking (optional)
# Get from: https://sentry.io
SENTRY_DSN=

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yourdomain.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=/var/backups/jandalisys
BACKUP_RETENTION_DAYS=30

# =============================================================================
# ZKTECO DEVICE CONFIGURATION
# =============================================================================
ZK_TIMEOUT=5
ZK_RETRY_COUNT=3

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend
VITE_API_URL=https://api.yourdomain.com
API_URL=https://api.yourdomain.com

# =============================================================================
# SSL/TLS CONFIGURATION (for nginx)
# =============================================================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# DOCKER SETTINGS
# =============================================================================
DOCKER_USERNAME=yourdockerusername
COMPOSE_PROJECT_NAME=jandalisys
