# Database Configuration
# For Development: Use SQLite
DATABASE_URL=sqlite:///./cashflow.db

# For Production: Use PostgreSQL
# DATABASE_URL=postgresql://jandalisys_user:STRONG_PASSWORD_HERE@localhost:5432/jandalisys_db

# Security - IMPORTANT: Generate a strong random key for production
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars

# JWT Settings
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Origins (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://127.0.0.1:3000,http://127.0.0.1:5173

# Rate Limiting
ENABLE_RATE_LIMIT=false
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Admin Credentials (CHANGE THESE IMMEDIATELY)
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_ARCHIVE_PASSWORD=Archive@123

# Environment
ENVIRONMENT=development
DEBUG=true

# Redis (Optional - for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Email Configuration (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASSWORD=your-email-password

# Logging
LOG_LEVEL=INFO
# LOG_FILE=/var/log/jandalisys/app.log

# ZKTeco Device Configuration
ZK_TIMEOUT=5
ZK_RETRY_COUNT=3

# Application Settings
APP_NAME=JANDALISYS
APP_VERSION=1.0.0
